<%- include("header") -%>
    
    <main>
        <!-- Your course listings and content go here -->
        <section class="course-listings">
            <h2>Featured Courses</h2>
            <!-- Add course cards here -->
        </section>
        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-indicators">
            <% featured_courses.forEach(function(item, index) { %>
              <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<% index %>" 
                <% if (index===0) { %>class="active" aria-current="true" <% } %>
                aria-label="Slide <%= index %>"></button>
            <% }) %>
          </div>
          <div class="carousel-inner">
            <% featured_courses.forEach(function(item, index) { %>
              <div class="carousel-item<% if (index===0) { %> active<% } %>">
                <img src="/images/<%= item.Image %>" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                  <h5><%= item.Title %></h5>
                  <p><i class="bi bi-geo-alt-fill"></i> <%= item.Location %> &nbsp;|&nbsp; <i class="bi bi-clock"></i> <%= item.Duration %></p>
                </div>
              </div>
            <% }) %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
    </main>
    <!-- Services-->
    <section class="page-section" id="services">
      <div class="container">
          <div class="text-center">
              <!-- <h2 class="section-heading text-uppercase">Courses</h2> -->
              <h3 class="section-subheading text-muted">Choose the one you want!</h3>
          </div>
          <div class="row text-center">
              <div class="col-md-4">
                  <span class="fa-stack fa-4x">
                      <i class="fas fa-circle fa-stack-2x text-primary"></i>
                      <i class="fas fa-shopping-cart fa-stack-1x fa-inverse"></i>
                  </span>
                  <a class="cou" href="advanced_courses" >  <h4 class="my-3">Advanced Courses</h4> </a>
                  <p class="text-muted">Explore exciting adventure courses tailored for tourists and adventure enthusiasts. Discover thrilling experiences, from hiking to water sports. Start your unforgettable journey today!</p>
              </div>
              <div class="col-md-4">
                  <span class="fa-stack fa-4x">
                      <i class="fas fa-circle fa-stack-2x text-primary"></i>
                      <i class="fas fa-laptop fa-stack-1x fa-inverse"></i>
                  </span>
                  <a class="cou" href="basic_courses" ><h4 class="my-3">Basic Courses</h4></a>
